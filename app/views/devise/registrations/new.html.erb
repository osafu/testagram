<h2>会員登録</h2>

<div class="form-content form-content-main row">
  <div class="form-content-in col-md-4">

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "field-label" do %>
    <i class="fa fa-envelope-o"></i>メールアドレス
    <% end %>
    <%= f.email_field :email, class: "form-control", placeholder: "メールアドレス", autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name, class: "field-label" do %>
    <i class="fa fa-user"></i>お名前
    <% end %>
    <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "field-label" do %>
      <i class="fa fa-lock"></i>パスワード
      <% if @minimum_password_length %>
      <span>※最低<%= @minimum_password_length %>文字以上</span>
      <% end %>
    <% end %>

    <%= f.password_field :password, class: "form-control", placeholder: "パスワード", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "field-label" do %>
    <i class="fa fa-lock"></i>パスワード（確認用）
    <% end %>
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "会員登録", class: "btn btn-success btn-block" %>
  </div>
<% end %>
</div>
</div>

<div class="form-content form-content-sub row">
  <div class="form-content-in col-md-4">

<%= render "devise/shared/links" %>

</div>
</div>
