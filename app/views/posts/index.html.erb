<%= notice %>
<h1>投稿一覧</h1>

<% @posts.each do |post| %>
  <p><%= post.content %></p>
  <span><%= link_to "編集", edit_post_path(post.id) %></span>
  <span><%= link_to "削除", post_path(post.id), method: :delete, data: { confirm: '削除してよろしいですか？'} %></span>
<% end %>

<p><%= link_to "投稿する", new_post_path %></p>
